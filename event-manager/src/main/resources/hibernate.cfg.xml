<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.pool_size">1</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<mapping class="ma.eventmanager.entitys.Profile"/>
		<mapping class="ma.eventmanager.entitys.Event"/>
		<mapping class="ma.eventmanager.entitys.Room"/>
		<mapping class="ma.eventmanager.entitys.Tag"/>
		<mapping class="ma.eventmanager.entitys.State"/>
		<mapping class="ma.eventmanager.entitys.Client"/>
		<mapping class="ma.eventmanager.entitys.User"/>
		<mapping class="ma.eventmanager.entitys.Subscription"/>
		<mapping class="ma.eventmanager.entitys.UserRole"/>
		
	</session-factory>
</hibernate-configuration>